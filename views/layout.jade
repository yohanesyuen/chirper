doctype html
html(ng-app='chirper')
  head
    title= title
    link(rel='stylesheet', href='/node_modules/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    block styles

    script(type='text/javascript', src='/node_modules/jquery/dist/jquery.min.js')
    script(type='text/javascript', src='/node_modules/bootstrap/dist/js/bootstrap.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.js')
    script(type='text/javascript', src='/node_modules/angular-sanitize/angular-sanitize.min.js')

    script(type='text/javascript', src='/js/actions.js')

  body
    nav.navbar.navbar-default.navbar-static-top
      div.container
        div.navbar-header
          a.navbar-brand(href='/') Chirper
        div.navbar-collapse.collapse#navbar
          ul.nav.navbar-nav.navbar-left
            li
              a(href='/users') Users
          ul.nav.navbar-nav.navbar-right
            if logged_in_user
              li
                a(href='/users/#{logged_in_user.username}') #{logged_in_user.firstName}
              li
                a(href='/logout') Log Out
            else
              li
                a(href='/signup') Sign Up
    div.content
      div.container
        block content
    script(type='text/javascript', src='/js/chirper.controllers.js')
    script(type='text/javascript', src='/js/chirper.js')

    block scripts

